@{
    ViewData["Title"] = "Bile≈üen Ekle";
    var productId = ViewBag.ProductId;
    var productName = ViewBag.ProductName;
    var components = ViewBag.Components as List<AtmRecipeApp.Models.Component>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>‚ûï @productName √ºr√ºn√ºne Bile≈üen Ekle</h1>
            <hr />

            <div class="card">
                <div class="card-body">
                    <form asp-action="AddComponent" method="post">
                        @Html.AntiForgeryToken()
                        
                        <input type="hidden" name="productId" value="@productId" />

                        <div class="form-group mb-3">
                            <label for="componentId" class="form-label">Bile≈üen Se√ßin</label>
                            <select name="componentId" id="componentId" class="form-control" required>
                                <option value="">-- Bile≈üen se√ßin --</option>
                                @if (components != null)
                                {
                                    foreach (var component in components)
                                    {
                                        <option value="@component.Id">
                                            @component.Name - @component.Price.ToString("C2")
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="quantity" class="form-label">Miktar</label>
                            <input type="number" name="quantity" id="quantity" class="form-control" 
                                   min="1" value="1" required />
                            <small class="form-text text-muted">Ka√ß adet gerekli?</small>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">üíæ Bile≈üeni Ekle</button>
                            <a asp-action="Details" asp-route-id="@productId" class="btn btn-secondary">‚ùå ƒ∞ptal</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Details" asp-route-id="@productId" class="btn btn-link">‚Üê √úr√ºn Detayƒ±na D√∂n</a>
            </div>
        </div>
    </div>
</div>
